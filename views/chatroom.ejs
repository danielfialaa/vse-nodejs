<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Node.js chat</title>
    <script src="https://kit.fontawesome.com/ec64859a5d.js" crossorigin="anonymous"></script>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/js/chatroom.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <notification-container></notification-container>
    <header>
        <a href="/" class="left"><i class="fas fa-arrow-left"></i></a>
        <h1>Chat</h1>
    </header>
    <div id="msg-container"></div>
    <div id="typing-users"></div>
    <div id="send">
        <form action="" id="send-msg-container">
            <input type="text" name="msg" id="msg-input">
            <button type="submit" id="send-msg-button"><i class="fas fa-arrow-up"></i></button>
        </form>
    </div>

</body>
</html>